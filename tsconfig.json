{
  "extends": "@shopify/typescript-configs/application.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "*": ["*", "packages/*", "src/*"]
    },
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "noFallthroughCasesInSwitch": true,
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
