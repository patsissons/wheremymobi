{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017", "esnext"],
    "module": "commonjs",
    "noEmit": true,
    "paths": {
      "~/*": ["src/*", "plugins/*", "config/*"],
      "*": ["src/packages/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["./config/**/*", "./src/**/*", "./*.ts"]
}
